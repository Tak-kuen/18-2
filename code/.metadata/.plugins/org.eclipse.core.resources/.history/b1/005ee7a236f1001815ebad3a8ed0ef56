package Game;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.sql.*;
import javax.swing.*;

public class LoginLabel extends JLabel {
	JTextField idPanel;
	JButton loginBtn;
	Connection conn=null;
	PreparedStatement pstmt;
	ResultSet rs;
	boolean isLogin;
	
	String inputId;
	LoginLabel() {
		isLogin=false;
		idPanel = new JTextField(10);
		this.add(idPanel);
		loginBtn = new JButton("로그인");
		loginBtn.addActionListener(new BtnListener());
		this.add(loginBtn);
		setVisible(true);
		
	}
	private class BtnListener implements ActionListener {

		@Override
		public void actionPerformed(ActionEvent e) {
			if(e.getSource()==loginBtn) {
				checkDB(idPanel.getText());
			}
		}
	}
	public Connection connectDB() {
		String url = "jdbc:mariadb://localhost:3306/test";
		String dbId = "root";
		String dbPw = "1234";
		//1. JDBC드라이버 적재
				try {
					Class.forName("org.mariadb.jdbc.Driver");
					System.out.println("드라이버 적재 성공");
					return DriverManager.getConnection(url, dbId, dbPw);
				} catch(ClassNotFoundException | SQLException e) {
					System.out.println("드라이버를 찾을 수 없습니다.");
					return null;
				}	
		//2. 데이터베이스 연결
	}
	public void checkDB(String id) {
		conn=connectDB();
		try {
			pstmt=conn.prepareStatement("select * from user where userid=?");
			pstmt.setString(1, id);
			rs=pstmt.executeQuery();
			if(rs.next()) {
				JOptionPane.showMessageDialog(null, "로그인 확인");
				this.isLogin=true;
			} else {
				String inputId = JOptionPane.showInputDialog(null, "로그인 실패\n회원가입");
				
			}
			
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}
}
