package _20181029쓰레드;

import java.util.ArrayList;

class Buffer {
	private int data;
	private int pos=0;
	private ArrayList<Integer> list=new ArrayList<>();
	//버퍼를 3개씩 설정했을때
	
	public synchronized int get() {
		while((pos%3!=0)||(pos==0)) {
			try {
				wait();
			} catch(InterruptedException e) {
				e.printStackTrace();
			}
		}
		pos--;
		notifyAll();
		return list.get(pos);
	}
	public synchronized void put(int data) {
		while((pos%3==0)&&(pos!=0)) {	//버퍼에 상품이 이미 있을경우
			try {		//생산자가 기다려야함
				wait();
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
		list.set(pos,data);
		pos++;
		notifyAll();
	}
}
