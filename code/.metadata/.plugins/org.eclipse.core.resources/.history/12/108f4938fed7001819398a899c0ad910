<style type="text/css">
	#result {
		width:500px;
		height:500px;
		border:5px double #6699FF;
	}
</style>
<script src="../js/jquery-3.3.1.min.js"></script>
<script>
	$(document).ready(function() {
		$("#b1").click(function() {
			var query={
					userid:		$("#userid").val(),
					password:	$("#password").val()
			};//query
			$.ajax({
				type:"POST",
				url:"MemberServlet",
				data:query,
				success:function(data) {
					if(data==1) {
						alert("성공");
					} else if(data==0) {
						alert("비밀번호가 틀립니다.");
						$("#password").val("");
						$("#password").focus();
					} else if(data==-1) {
						alert("아이디가 맞지 않습니다.");
						$("#userid").val("");
						$("#password").val("");
						$("#password").focus();
					}//else-if
				}//success
			});//ajax
		});//#b1
	});//document
</script>
</head>
<body>
아이디와 비밀번호 입력<br>
	<input name="userid" id="userid" type="text"><br>
	<input name="password" id="password" type="password"><br>
	<button id="b1" >클릭</button><br>
	<hr/>
결과
