package _1030Stack;

interface Stack<T> {
	boolean isEmpty();
	void push(T item);
	T pop();
	void delete();
	T peek();
}

class ArrayStack<T> implements Stack {
	private int top;
	private int stackSize;
	private T itemArray[];
	
	public ArrayStack(int stackSize) {
		top= -1;
		this.stackSize=stackSize;
		itemArray = (T[])new Object[this.stackSize];
	}//constructor
	
	public boolean isEmpty() {	return (top== -1);	}
	public boolean isFull() {	return(top== this.stackSize-1);	}
	
	public void push(Object item) {
		if(isFull()) {
			System.out.println("Inserting fail! Array Stack is full!!");
		}else {
			itemArray[++top] = (T) item;
			System.out.println("Inserted Item : " + item);
		}// if-else
	}
	
	public T pop() {
		if(isEmpty()) {
			System.out.println("Deleting fail! Array Stack is empty!");
			return null;
		}else {
			return itemArray[top--];
		}//if-else
	}//pop()
	
	public void delete() {
		if(isEmpty()) {
			System.out.println("Deleting fail! Array Stack is empty!!");
		}else {
			top--;
		}//if-else
	}//delete()
	
	public T peek() {
		if(isEmpty()) {
			System.out.println("Peeking fail! Array Stack is empty!!");
			return null;
		}else {
			return itemArray[top];
		}//if-else
	}//peek()
	
	public void printStack() {
		if(isEmpty()) {
			System.out.printf("Array Stack is empty!! \n \n");
		}else {
			System.out.printf("Array Stack>> ");
			for(int i =0; i<=top ; i++) {
				System.out.printf("%c ", itemArray[i]);
			}//for
			System.out.println(); System.out.println();
		}//if-else
	}//printStack()
}


public class Ex7_1 {

	public static void main(String[] args) {
		int stackSize=5;
		char deletedItem;
		ArrayStack S = new ArrayStack(stackSize);
		
		S.push('A');
		S.printStack();
		
		S.push('B');
		S.printStack();
		
		S.push('C');
		S.printStack();
		
		deletedItem=(char) S.pop();
		if(deletedItem !=0) {
			System.out.println("deleted Item : " + deletedItem);
		}
		S.printStack();
	}

}
